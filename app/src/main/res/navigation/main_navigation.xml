<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/filmsFragment">

    <fragment
        android:id="@+id/filmsFragment"
        android:name="ru.ownikss.demo.ui.fragments.FilmsFragment"
        android:label="FilmsFragment" >
        <action
            android:id="@+id/action_filmsFragment_to_filmFragment"
            app:destination="@id/filmFragment" />
        <action
            android:id="@+id/action_filmsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_filmsFragment_to_addFilmFragment"
            app:destination="@id/addFilmFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmFragment"
        android:name="ru.ownikss.demo.ui.fragments.FilmFragment"
        android:label="FilmFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ru.ownikss.demo.ui.fragments.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/addFilmFragment"
        android:name="ru.ownikss.demo.ui.fragments.AddFilmFragment"
        android:label="AddFilmFragment" />
</navigation>